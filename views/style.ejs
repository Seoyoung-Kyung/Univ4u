.topnav {
  overflow: hidden;
  background-color: #ffffff;
  height:85px;
  width:100%;
  border: solid 1px;
  border-color:#d6d6d6;
}

.topnav img{
  float:left;
  padding-top:-50px;
  margin-top:15px;
  margin-left:40px;
  width:140px;
  height:38px;
}

@media screen and (max-width: 400px) {
  .topnav a {
     float: none;
     width: 100%;
   }
 }

 #fromInsideOut {
   list-style-type: none;
   text-decoration:none;
   margin-left: 0px;
   padding: 0;
   border-collapse: collapse;
   background-color: #;
   height:70px;
   weight:100%;
 }

 #fromInsideOut li {
   float:right;
   position:relative;
   right:50px;
  font-weight:bold;
 }

 #fromInsideOut li a {
   display: block;
   text-decoration:none;
   padding: 14px 16px;
   float: right;
   color: #696969;
   text-align: center;
 }

 #fromInsideOut li::after {
   border-collapse: collapse;
   position: absolute;
   content:"";
   display: block;
   bottom:-18px;
   border-bottom : 4px solid #0064A5;
   transition: all 250ms ease-out;
   left: 50%;
   width: 0;
   color:#003D65;
 }

 #fromInsideOut li:hover::after {
   border-collapse: collapse;
   transition: all 250ms ease-out;
   margin-top:25px;
   left: 0%;
   width: 90%;
   margin-left:0.3em;
   color:#003D65;
 }

  #fromInsideOut .active{
   border-bottom: 4px solid #0064A5;
   border-collapse:separate;
   color:#0064A5;
   padding-bottom: 14px;
 }

 #fromInsideOut .active a {
   color:#003D65;
 }

